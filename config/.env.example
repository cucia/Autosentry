# AutoSentry VAPT Tool Configuration

# ======================
# Server Configuration
# ======================
AUTOSENTRY_HOST=0.0.0.0
AUTOSENTRY_PORT=5000
AUTOSENTRY_DEBUG=True

# ======================
# Security Settings
# ======================
AUTOSENTRY_API_KEY=change-this-api-key-for-security

# ======================
# Scanner Configuration
# ======================
ENABLE_ZAP=True
ENABLE_NMAP=True
ENABLE_NIKTO=True

# Scanner timeouts (seconds)
MAX_SCAN_TIME=1800
SCAN_TIMEOUT=600

# ======================
# Directory Configuration
# ======================
RESULTS_DIR=./results
TEMP_DIR=./temp
LOGS_DIR=./logs

# ======================
# Logging Configuration
# ======================
AUTOSENTRY_LOG_LEVEL=INFO
AUTOSENTRY_LOG_FILE=autosentry.log

# ======================
# Optional: Advanced Settings
# ======================
ALLOWED_HOSTS=*
MAX_CONCURRENT_SCANS=3

# ======================
# ZAP Configuration (if using OWASP ZAP)
# ======================
ZAP_API_KEY=zap-api-key-here
ZAP_HOST=127.0.0.1
ZAP_PORT=8080
ZAP_HOME=/opt/zaproxy

# ======================
# Scanner Paths (optional - auto-detected)
# ======================
# NMAP_PATH=/usr/bin/nmap
# NIKTO_PATH=/usr/bin/nikto
