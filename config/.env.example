# AutoSentry VAPT Tool Configuration Template

# ======================
# Server Configuration
# ======================
AUTOSENTRY_HOST=0.0.0.0
AUTOSENTRY_PORT=5000
AUTOSENTRY_DEBUG=False

# ======================
# Scanner Configuration  
# ======================
ENABLE_NMAP=True
ENABLE_NIKTO=True

# Scanner timeouts (seconds)
MAX_SCAN_TIME=1800
SCAN_TIMEOUT=600

# ======================
# Directory Configuration
# ======================
RESULTS_DIR=./results
TEMP_DIR=./temp
LOGS_DIR=./logs

# ======================
# Logging Configuration
# ======================
AUTOSENTRY_LOG_LEVEL=INFO
AUTOSENTRY_LOG_FILE=logs/autosentry.log

# ======================
# Optional: Security Settings
# ======================
AUTOSENTRY_API_KEY=change-this-for-production
ALLOWED_HOSTS=*
MAX_CONCURRENT_SCANS=3
